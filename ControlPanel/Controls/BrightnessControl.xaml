<UserControl x:Class="SmartHome.ControlPanel.Controls.BrightnessControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartHome.ControlPanel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Brightness:"
                   Margin="0,0,5,0"
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   FontSize="18"/>
            <TextBlock Text="{Binding Brightness, StringFormat='{}{0} %'}" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   FontSize="18"/>
        </StackPanel>
        <Slider Minimum="0" Maximum="100" Value="{Binding Brightness, Mode=TwoWay}" />
    </StackPanel>
</UserControl>
