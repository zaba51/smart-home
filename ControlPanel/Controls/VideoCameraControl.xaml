<UserControl x:Class="SmartHome.ControlPanel.Controls.VideoCameraControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartHome.ControlPanel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <StackPanel>
            <TextBlock Text="Recording Time:" FontSize="18"/>
            <TextBlock Text="{Binding RecordingDuration, StringFormat={}{0:hh\\:mm\\:ss}}" FontSize="18" />

            <Button x:Name="ToggleRecordingButton"
                    Height="30" 
                    Content="Start Recording" 
                    Click="OnToggleRecordingClick"
                    Margin="0, 10, 0, 0"/>

            <Button Content="Open Recordings Folder" 
                    Height="30" 
                    Click="OnOpenFolderClick"/>
        </StackPanel>
</UserControl>
