<UserControl x:Class="SmartHome.ControlPanel.Controls.AutoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartHome.ControlPanel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,10,0">
        <CheckBox IsChecked="{Binding IsAutoMode, Mode=TwoWay}" 
                    VerticalAlignment="Center" 
                    Width="15" Height="15" HorizontalAlignment="Center" FontSize="18" Checked="CheckBox_Checked"/>
        <TextBlock Text="Auto Mode" 
                    FontSize="18"
                    
                    VerticalAlignment="Center" 
                    FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" Margin="8,0,0,3"/>
    </StackPanel>
</UserControl>
